<% @title = "Tracks" %>
<h1>All Tracks</h1>
<div class = "item-wrapper">

	<% @tracks.each do |track| %>
	<div class = "item-container">
	  <div class="track">
	    <h3><a href="/tracks/<%= track.id %>"><%= track.song_title %></a>
	    <small>
	    	<br>
	    	(by: <%= track.artist %>)
	    </small>

	    <% if logged_in? %>
		    <span class="count" id="count-<%= track.id %>"><%= track.upvotes.size %></span>
		     
		    <i class="<%= 'voted' if current_user.has_voted?(track) %> fa fa-thumbs-up" id = "<%= track.id %>"> </i>
			<% end %>
			<iframe width="50%"  src= "<%= track.url %>"></iframe></h3>
	    <p>
				 <!-- video player goes here! -->
	    </p>
	    </div>

	  </div>
	<% end %>
	</div>